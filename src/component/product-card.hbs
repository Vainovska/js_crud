<div class='product-card'>
        {{#with data.products}}
          {{#if isEmpty}}
            <mark>Список пустий</mark>
          {{else}}
            <ul>
              {{#each list}}
                <li>
                    <h4 class="product-card__title">{{name}}</h4>
                    <p class="product-card__description">{{description}}</p>
                    <div class="product-card__id">ID: {{id}}</div>
                    <div class="product-card__price">{{prise}}</div>
                    
                  <a
                    href='/user-edit?id={{id}}' class="product-card__edit"
                  >Редагувати</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>